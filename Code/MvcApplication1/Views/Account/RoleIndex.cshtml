@{
    ViewBag.Title = "Role Listing";
    //Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<p>&nbsp;</p>
<div class="spacerBody">
    @Html.ActionLink("Create New Role", "RoleCreate") | @Html.ActionLink("Add Role to User", "RoleAddToUser")
<h2>Role Index</h2>
   <h1 style="color:red">@ViewBag.M</h1>
        
 <table>   
@foreach (string s in Model)
{
    <tr>
        <td>
            @s
         </td>
       
        <td>
            <span onclick="return confirm('Are you sure to delete?')">
        <a href="/Account/RoleDelete?RoleName=@s" class="delLink"><img src="/Content/Images/deleteicon.gif" alt="Delete" class="imgBorder0" /> Delete</a>
                           </span>
       </td>
            
            </tr>
}
     </table>
        
</div>